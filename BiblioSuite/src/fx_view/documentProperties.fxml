<BorderPane maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity"
	xmlns="http://javafx.com/javafx/9.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="view.DocumentProperties">
	<left>
		<AnchorPane BorderPane.alignment="CENTER">
			<children>
				<HBox spacing="70" layoutX="49.0" layoutY="20">
					<VBox spacing="20" prefWidth="240.0">
						<Label text="Document Properties:" textFill="#aaaaaa">
							<font>
								<Font size="28.0" />
							</font>
						</Label>
						<HBox>
							<Label text="Title: " style="-fx-text-fill: #f87e1a" />
							<Label fx:id="title" />
						</HBox>
						<HBox>
							<Label text="Author: " style="-fx-text-fill: #f87e1a" />
							<Label fx:id="author" />
						</HBox>
						<HBox>
							<Label text="Composition: " style="-fx-text-fill: #f87e1a" />
							<Label fx:id="composition" />
						</HBox>
						<HBox>
							<Label text="Description: " style="-fx-text-fill: #f87e1a" />
							<TextArea fx:id="description" />
						</HBox>

					</VBox>
					<VBox spacing="20">
						<HBox />
						<JFXCheckBox disable="true" fx:id="scanningComplete"
							text="Scanning Complete" />
						<JFXCheckBox disable="true"
							fx:id="transcriptionComplete" text="Transcription Complete" />
						<Label text="Categories: " style="-fx-text-fill: #f87e1a" />
						<TextArea fx:id="categories" editable="false" />
						<Label text="Tags: " style="-fx-text-fill: #f87e1a" />
						<TextArea fx:id="categories" editable="false" />
					</VBox>
				</HBox>
			</children>
		</AnchorPane>
	</left>
</BorderPane>
